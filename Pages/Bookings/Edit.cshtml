@page
@model Car_Wash.Pages.Bookings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="pt-4"> </h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Booking.id" />
            <div class="form-group">
                <label asp-for="Booking.CustomerID" class="control-label"></label>
                <select asp-for="Booking.CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
                <span asp-validation-for="Booking.CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.CarID" class="control-label"></label>
                <select asp-for="Booking.CarID" class="form-control" asp-items="ViewBag.CarID"></select>
                <span asp-validation-for="Booking.CarID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.ServiceID" class="control-label"></label>
                <select asp-for="Booking.ServiceID" class="form-control" asp-items="ViewBag.ServiceID"></select>
                <span asp-validation-for="Booking.ServiceID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.Date" class="control-label"></label>
                <input asp-for="Booking.Date" class="form-control" />
                <span asp-validation-for="Booking.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
