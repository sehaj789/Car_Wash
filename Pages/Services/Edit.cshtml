@page
@model Car_Wash.Pages.Services.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="pt-4"> </h1>
<h4>Service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
